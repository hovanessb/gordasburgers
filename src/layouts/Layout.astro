---
import '@fontsource/zen-maru-gothic';
import '@fontsource/titan-one';
import { ViewTransitions } from 'astro:transitions';
import { SEO } from "astro-seo";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head> 
    <meta charset="UTF-8">
    <SEO
    title={title}
    description="Las Gordas Burgers - Pop Up Burgers for the Bay Area"
    openGraph={{
      basic: {
        title: "Gordas Burgers",
        type: "website",
        url: "https://gordasburgers.com/",
        image: "https://gordasburgers.com/logo.webp",
    }}},
      extend={{
      // extending the default link tags
      link: [{ rel: "icon", href: "/favicon.png" }],
      // extending the default meta tags
      meta: [
        { name: "generator", content: Astro.generator },
        { name: "viewport", content:"width=device-width"}
      ],
    }}
  />
    <ViewTransitions />
  </head>
  <body>
    <slot />
    <style is:global>
      html {
        font-family: Zen Maru Gothic,Proxima Nova,ui-sans-serif,system-ui,-apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Helvetica Neue,Arial,Noto Sans,sans-serif,"Apple Color Emoji","Segoe UI Emoji",Segoe UI Symbol,"Noto Color Emoji";
        background-color: rgb(249 112 104 / var(--tw-bg-opacity));
        overflow-x: hidden;
        scroll-behavior: smooth;
      }
    </style>
  <!-- Google tag (gtag.js) -->
  <script type="text/partytown" async src="https://www.googletagmanager.com/gtag/js?id=G-B5D6YX1YGY"></script>
  <script type="text/partytown">
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'G-B5D6YX1YGY');
  </script>
  </body>
</html>
